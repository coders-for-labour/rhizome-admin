dom-module#c4c-auth-service
  template
    style.
      :host {
        display: none;
      }

    iron-ajax#authenticated(
      url="/authenticated",
      headers='{"Accept":"application/json"}'
      handleAs="json",
      on-response="onAjaxResponse",
      on-error="onAjaxError"
    )

  script(src="c4c-auth-service.js")

dom-module#c4c-auth
  template
    style(include="shared-styles").
      :host {
        min-width: 40%;
      }
      paper-button {
        background: var(--default-primary-color);
        color: var(--text-primary-color);
      }

      h1, p {
        margin: 0;
      }

      paper-button {
        margin-top: 30px;
      }

    .card
      h1 Rhizome
      p Administration Console
      paper-button(on-click="login")
        iron-icon(icon="lock-outline")
        | Login with Google

  script(src="c4c-auth.js")